<section>

  <header>

    Realizar login

  </header>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="field">

      <%= f.label 'E-Mail:' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>

    </div>

    <div class="field">

      <%= f.label 'Senha:' %>
      <%= f.password_field :password, autocomplete: "current-password" %>

    </div>

    <div class="actions">

      <%= f.submit "Entrar" %>

    </div>
    
  <% end %>

</section>

<footer>

